
<dialog class="nyhedsbox" open>
  <button class="nyhedsknap" autofocus>✖</button>
  <h2>NYHEDSBREV</h2>
  <p class="nyhedstekst">Skriv dig op til nyhedsbrevet og vær den første, der modtager besked om nye koncerter,
        merchandise og meget mere.</p>
        <form>
         <div class="skærsilden">
        <input class="input" type="email" id="email" name="email" placeholder="E-MAIL" required />
        <button type="submit">TILMELD</button>
      </div>
      </form>
</dialog>
<button class="fjerndenne">Show the dialog</button>

<script>

const dialog = document.querySelector("dialog");
const showButton = document.querySelector("dialog + button");
const closeButton = document.querySelector("dialog button");

// "Show the dialog" button opens the dialog modally
showButton.addEventListener("click", () => {
  dialog.showModal();
});

// "Close" button closes the dialog
closeButton.addEventListener("click", () => {
  dialog.close();
});
</script>


