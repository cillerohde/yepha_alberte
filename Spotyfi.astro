---
import Button from "../components/Button.astro";
const { title } = Astro.props;
---

<div class="container">
  <div class="button">
    <Button />
  </div>

  <div class="spotify">
    <a href="https://open.spotify.com/artist/5asGLnsKzGu0vUCRFSjibL" target="_blank">
      <img class="img" src="/billeder/spotyfi.svg" alt="Spotify" />
    </a>
    <p class="p"><br />EXPLORE ON <br /><br />SPOTIFY<br /></p>
    <img class="arrow" src="/billeder/Arrow.jpg" alt="">
  </div>
</div>

<style>
  .img {
    width: 100px;
    margin-left: 30px;
    padding-left: 50px;
   
  }

  .arrow {
   display: right;
   margin-right: 0;
  right: 0;
    }

  

  .spotify {
    display: flex;
    align-items: center;
    gap: 20px;
    white-space: nowrap; 
  }

  .container {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    padding: 40px;
  }

  .p {
    color: rgba(0, 0, 0, 0.3);
    font-size: 40px;
    font-weight: bolder;
    font-family: "Inter", serif;
    line-height: 20px;
  }

  @media (max-width: 1024px) {
    .img,

    img {
      width: 60px;
      padding: 50px;
       padding:1px;
      
  
    }
    .spotify {
      white-space: nowrap; 
      padding: 0;
    }

    .p {
      font-size: 10px;
      line-height: 0.8;
    }

    .button {
      grid: block;
      margin-left: 20px;
      min-width:5%;
      white-space: nowrap; 
    }
      
    .arrow {
      display: block;

    }
  }
</style>
